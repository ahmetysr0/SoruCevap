@{
    Layout = null;
}

@model LoginViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Giriş Yap</title>
    
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            width: 100%;
            max-width: 400px;
        }

        .auth-form {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .auth-form h4 {
                text-align: center;
                margin-bottom: 25px;
                color: #2c3e50;
                font-weight: 600;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            height: 45px;
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            }

        .btn-primary {
            height: 45px;
            font-size: 16px;
            background-color: #3498db;
            border-color: #3498db;
        }

            .btn-primary:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }

        .auth-links {
            text-align: center;
            margin-top: 20px;
        }

            .auth-links a {
                color: #3498db;
                text-decoration: none;
            }

                .auth-links a:hover {
                    text-decoration: underline;
                }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
        }

            .brand-logo img {
                width: 120px;
                height: auto;
            }

        .social-login {
            margin-top: 20px;
            text-align: center;
        }

            .social-login .btn {
                width: 45px;
                height: 45px;
                margin: 0 5px;
                border-radius: 50%;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                font-size: 18px;
                color: white;
            }

        .btn-facebook {
            background-color: #3b5998;
        }

        .btn-google {
            background-color: #db4437;
        }

        .btn-twitter {
            background-color: #1da1f2;
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
        }

            .brand-logo .logo-icon {
                width: 80px;
                height: 80px;
                margin: 0 auto 15px;
                background: #3498db;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .brand-logo .logo-icon i {
                    font-size: 40px;
                    color: white;
                }

            .brand-logo .logo-text {
                color: #2c3e50;
                font-size: 24px;
                font-weight: 600;
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="auth-form">
            <div class="brand-logo">
    <div class="logo-icon">
        <i class="fas fa-comments"></i>
    </div>
    <h3 class="logo-text">Soru & Cevap</h3>
</div>
            
            <h4>Hoş Geldiniz!</h4>
            
            <form asp-controller="User" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Email adresinizi girin" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                        <label class="custom-control-label" asp-for="RememberMe">Beni Hatırla</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt mr-2"></i> Giriş Yap
                </button>
            </form>

            <div class="social-login">
                <a href="#" class="btn btn-facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="btn btn-google"><i class="fab fa-google"></i></a>
                <a href="#" class="btn btn-twitter"><i class="fab fa-twitter"></i></a>
            </div>

            <div class="auth-links">
                <a href="@Url.Action("Register","User")">Hesabınız yok mu? Kayıt olun</a>
                <br>
                <a href="#" class="mt-2 d-inline-block">Şifremi unuttum</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>


